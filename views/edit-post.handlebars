<article>
  <a href="/dashboard"> Back to Dashboard</a>
  <h2>Edit Post</h2>
  <form class="edit-post-form">
    <div>
      <input type="text" name="post-title" id="post-title" value="{{post.title}}" />
    </div>
    <div>
        <input type="text" name="postText" id="post-text" value="{{post.postText}}">
    </div>
    <div>
      <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
    </div>
    <button type="submit">Save Post</button>
    <button type="button" class="delete-post-btn">Delete Post</button>
  </form>
</article>

<form class="comment-form">
    <div>
        <textarea id="comment-body" name="comment-body"></textarea>
    </div>
    <div>
        <button type="submit">add comment</button>
    </div>
</form>
{{> comments post.comments}}

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<script src="/js/comment.js"></script>